<%- include('./partials/head.ejs'); %>
  <%- include('./partials/navbar.ejs'); %>
    <div class="container bg-light shadow p-5">
        <div class="p-4">
            <h1 class="display-5 text-info text-center p-2">FAÇA SUA DOAÇÃO</h1>
              <div class="container">
                <%- include('partials/mensagens.ejs'); %>
              </div>
              <% if(typeof erros != 'undefined'){ %>
                <% erros.forEach(function(error) { %>
                    <div class="alert alert-danger">
                        <%= error.text %>
                    </div>
                <% }); %>
              <% } %>  
        </div>      
          <div class="form-row">
            <div class="col-md-12 order-md-1 p-4">
              <h4 class="mb-3">Dados pessoais <hr></h4>
                <form class="form-group" method="POST" action="#">
                  <div class="form-row">
                    <div class="col-md-4 mb-3">
                      <label>Nome<span class="text-danger"> *</span></label>
                      <input type="text" class="form-control" name="nome" id="nome" placeholder="Rebecca" data-tipo="nome" required>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label>Sobrenome<span class="text-danger"> *</span></label>
                        <input type="text" class="form-control" id="sobrenome" name="sobrenome" placeholder="Albertalli" data-tipo="sobrenome" required>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="label" for="cpf">CPF<span class="text-danger"> *</span></label>
                        <input type="text" minlength="11" class="form-control" id="cpf" name="cpf" placeholder="apenas números" data-tipo="cpf" required>
                    </div>
                  </div>
                  <div class="form-row">
                    <div class="col-md-4 mb-3">
                        <label>Data de Nascimento<span class="text-danger"> *</span></label>
                        <input type="date" class="form-control" id="dataNascimento" name="dataNascimento" placeholder="DD/MM/YYYY" min="1901-01-01" data-tipo="dataNascimento" required>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label>E-mail<span class="text-danger"> *</span></label>
                        <input type="email" class="form-control" id="email" name="email" placeholder="seuemail@email.com" data-tipo="email" required>       
                    </div>
                    <div class="col-md-4 mb-3">
                        <label>Contato<span class="text-danger"> *</span></label>
                        <input class="form-control" id="contato" name="contato" placeholder="(69)4002-8922" data-tipo="contato" required>
                    </div>
                  </div>
                  <div class="form-row">
                    <div class="col-md-2 mb-3">
                        <label>CEP<span class="text-danger"> *</span></label>
                        <input type="text" class="form-control" id="cep" name="cep" placeholder="" data-tipo="cep" pattern="[\d]{5}-?[\d]{3}" required>
                    </div>
                    <div class="col-md-5 mb-3">
                        <label>Endereço<span class="text-danger"> *</span></label>
                        <input type="text" class="form-control" id="logradouro" name="endereco1" placeholder="Rua das ruas, 0101" data-tipo="endereco1" required>
                    </div>
                    <div class="col-md-5 mb-3">
                        <label>Bairro<span class="text-danger"> *</span></label>
                        <input type="text" class="form-control" id="bairro" name="bairro" placeholder="" required>
                    </div>
                  </div>
                  <div class="form-row">
                    <div class="col-md-4 mb-3">
                      <label>Cidade<span class="text-danger"> *</span></label>
                      <input class="form-control" type="text" name="cidade" id="cidade" placeholder="" data-tipo="cidade" required>        
                    </div>
                    <div class="col-md-4 mb-3">
                        <label>Estado<span class="text-danger"> *</span></label>
                        <input type="text" class="form-control" id="uf" name="estado" placeholder="" data-tipo="estado" required>
                    </div>
                    <div class="col-md-4 mb-3">
                      <label>País<span class="text-danger"> *</span></label>
                        <select id="pais" name="pais" data-tipo="pais" class="form-control" required>
                          <option selected>Brasil</option>
                          <option>Outro</option>
                        </select> 
                    </div>
                  </div>
                  <br>
                  <h4 class="mb-3">Pagamento<hr></h4>
                  <label>Escolha um valor para doar mensalmente: </label>
                    <fieldset class="form-group">
                      <div class="row">
                        <div class="col-sm-4">
                          <div class="form-check">
                            <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios1" value="option1" checked>
                            <label class="form-check-label" for="gridRadios1">R$ 20,00</label>
                          </div>
                          <div class="form-check">
                            <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios2" value="option2">
                            <label class="form-check-label" for="gridRadios1">R$ 30,00</label>
                          </div>
                          <div class="form-check">
                            <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios3" value="option3">
                            <label class="form-check-label" for="gridRadios1">R$ 40,00</label>
                          </div>
                        </div>
                        <div class="col-sm-4">
                          <div class="form-check">
                            <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios4" value="option4">
                            <label class="form-check-label" for="gridRadios4">R$ 50,00</label>
                          </div>
                          <div class="form-check">
                            <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios5" value="option5">
                            <label class="form-check-label" for="gridRadios5">R$ 100,00</label>
                          </div>
                          <div class="form-check">
                            <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios6" value="option6">
                            <label class="form-check-label" for="gridRadios6">R$ 150,00</label>
                          </div>
                        </div>
                        <div class="col-sm-4">
                          <div class="form-check">
                            <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios7" value="option7">
                            <label class="form-check-label" for="gridRadios7">R$ 200,00</label>
                          </div>
                          <div class="form-check">
                            <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios8" value="option8">
                            <label class="form-check-label" for="gridRadios8">R$ 300,00</label>
                          </div>
                          <div class="form-check">
                            <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios9" value="option9">
                            <label class="form-check-label" for="outroValor">Outro Valor? <input class="form-control form-control-sm" type="text" id="outroValor" name="outroValor" data-tipo="outroValor" placeholder="R$ 9.000,00" required></label>
                          </div>
                        </div>
                      </div>
                    </fieldset>
                    <label>Tipo de Pagamento: </label>
                    <div class="form-row d-block my-3">
                        <button class="btn btn-primary m-1" type="button" data-toggle="collapse" data-target="#cartaoCredito" aria-expanded="false" aria-controls="cartaoCredito" id="btn-first">
                          Cartão de Crédito
                        </button>
                        <button class="btn btn-primary m-1" type="button" data-toggle="collapse" data-target="#cartaoDebito" aria-expanded="false" aria-controls="cartaoDebito" id="btn-second">
                          Cartão de Débito
                        </button>          
                        <button class="btn btn-primary m-1" type="button" data-toggle="collapse" data-target="#paypal" aria-expanded="false" aria-controls="paypal" id="btn-third">
                          Paypal
                        </button>
                    </div>
                  <!--Inserindo linhas para selecionar formas de pagamentos-->
                  <div class="form-row">
                    <!-- Pagamento com cartão de crédito -->
                    <div class="collapse" id="cartaoCredito">
                      <div class="form-row">
                        <div class="col-md-6 mb-3">
                          <label>Títular do Cartão<span class="text-danger"> *</span></label>
                          <input type="text" class="form-control" id="nomeCredito" name="nomeCredito" placeholder="Digite o nome impresso" required>
                          <small class="text-muted">Nome igual ao escrito no cartão</small>
                        </div>
                        <div class="col-md-6 mb-3">
                          <label>Número do Cartão<span class="text-danger"> *</span></label>
                          <input type="text" class="form-control" id="numCredito" name="numCredito" placeholder="Digite seu número do cartão" required>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label>Data de Validade<span class="text-danger"> *</span></label>
                            <input type="text" class="form-control" id="dataCredito" name="dataCredito" placeholder="MM/AA" required>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label>Código de Segurança<span class="text-danger"> *</span></label>
                            <input type="text" class="form-control" id="codCredito" name="codCredito" placeholder="CVV" maxlength="3" required>
                        </div>
                    </div>
                      
                    </div>
                    <!-- Pagamento com cartão de débito -->
                    <div class="collapse" id="cartaoDebito">
                      <div class="form-row">
                        <div class="col-md-6 mb-3">
                          <label>Títular do Cartão<span class="text-danger"> *</span></label>
                          <input type="text" class="form-control" id="nomeDebito" name="nomeDebito" placeholder="Digite o nome impresso" required>
                          <small class="text-muted">Nome igual ao escrito no cartão</small>
                          
                        </div>
                        <div class="col-md-6 mb-3">
                          <label>Número do Cartão<span class="text-danger"> *</span></label>
                          <input type="text" class="form-control" id="numDebito" name="numDebito" placeholder="Digite o nome impresso" required>
                           
                        </div>
                        <div class="col-md-3 mb-3">
                            <label>Data de Validade<span class="text-danger"> *</span></label>
                            <input type="text" class="form-control" id="dataDebito" name="dataDebito" placeholder="MM/AA" required>
                              
                          </div>
                          <div class="col-md-3 mb-3">
                            <label>Código de Segurança<span class="text-danger"> *</span></label>
                            <input type="text" class="form-control" id="codDebito" name="codDebito" placeholder="CVV" maxlength="3" required>
                              
                          </div>
                      </div>
                    </div>
                    <div class="collapse" id="paypal">
                      <div class="col-md-12 mb-3">
                        <br>   
                        Para fazer sua doação via Paypal <a href="https://www.paypal.com/br" class="btn btn-sm btn-outline-primary" target="_blank">Clique aqui</a>
                        <br>   
                      </div>
                    </div>
                  </div>
                    <hr class="mb-4">
                    <button class="btn btn-success btn-lg btn-block" type="submit">DOAR</button>
                </form>
            </div> 
          </div>
    </div>
<%- include('./partials/footer.ejs'); %>